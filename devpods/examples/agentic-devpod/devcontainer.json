{
	"name": "Basic Development DevPod",
	"image": "mcr.microsoft.com/devcontainers/base:debian12",
	"runArgs": ["--privileged"],
	"remoteUser": "vscode",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/python:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"rooveterinaryinc.roo-cline",
				"vsls-contrib.gistfs",
				"github.copilot",
				"github.copilot-chat",
				"anthropic.claude-code"
			]
		}
	},
	"postCreateCommand": "tmux new-session -d -s claude-code 'claude-code start --open-browser=false'",
	"shutdownAction": "none"
}
